{
  "name": "api",
  "version": "1.0.0",
  "description": "API for Spark React Native app",
  "main": "server.js",
  "scripts": {
    "pretest": ". ./pretest.sh",
    "test": "TEST=true tape -r babel-register 'test/**/*.js' | tap-spec",
    "test-coverage": "TEST=true nyc tape -r babel-register 'test/**/*.js' | tap-spec",
    "test-watch": "nodemon -q -x 'npm run test-coverage'",
    "lint": "eslint '/src/**/*.js' '/test/**/*.js'",
    "load-dev-schema": "psql spark -f ./test/utils/schema.sql",
    "postgres": "postgres -D /usr/local/var/postgres",
    "make-docs": "./node_modules/.bin/jsdoc -c ./conf.json -r"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DRDD2016/api.git"
  },
  "author": "minaorangina, heron2014",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DRDD2016/api/issues"
  },
  "homepage": "https://github.com/DRDD2016/api#readme",
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test coverage",
      "post-merge": "npm install"
    }
  },
  "devDependencies": {
    "blue-tape": "^1.0.0",
    "eslint": "^3.11.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "ghooks": "^1.3.2",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.4.3",
    "nodemon": "^1.11.0",
    "supertest": "^2.0.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "body-parser": "^1.15.2",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "pg": "^6.1.0"
  }
}
